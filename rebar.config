{erl_opts, [
    debug_info,
    {i, "include"},
    %% Optimization flags for JIT performance
    {hipe, [o3]},  %% Enable aggressive optimization
    native,        %% Enable native compilation where possible
    {inline_size, 24},  %% Increase inline size for better JIT optimization
    warn_export_all,
    warn_shadow_vars,
    warn_obsolete_guard,
    warn_unused_import
    %% Temporarily disabled for optimization upgrade
    %% warnings_as_errors
]}.
{deps, [
    {jsx, "3.1.0"},
    {cowboy, "2.10.0"},
    {uuid, "2.0.6", {pkg, uuid_erl}},
    {gun, "2.0.1"}
]}.

{plugins, [
    rebar3_hex,
    rebar3_ex_doc
]}.

{hex, [{doc, ex_doc}]}.

{ex_doc, [
    {source_url, <<"https://github.com/arthurcolle/agents.erl">>},
    {extras, [<<"README.md">>]},
    {main, <<"readme">>}
]}.

{relx, [
    {release, {agents, "0.1.0"}, [agents, openai, agent_web]},
    {dev_mode, true},
    {include_erts, false},
    {extended_start_script, true}
]}.

{profiles, [
    {prod, [
        {erl_opts, [
            no_debug_info,
            {hipe, [o3, verbose]},
            native,
            {inline_size, 32},
            %% Additional JIT optimizations
            {d, 'NATIVE_COMPILATION'},
            {d, 'JIT_OPTIMIZED'}
        ]},
        {relx, [
            {dev_mode, false},
            {include_erts, true},
            %% VM args for JIT optimization
            {vm_args, "config/vm.args.prod"}
        ]}
    ]},
    {perf, [
        {erl_opts, [
            debug_info,
            {hipe, [o3]},
            native,
            {d, 'PERF_ANALYSIS'}
        ]},
        {relx, [
            {dev_mode, false},
            {include_erts, true},
            {vm_args, "config/vm.args.perf"}
        ]}
    ]}
]}.

{shell, [
  % {config, "config/sys.config"},
  {apps, [agents, openai, agent_web]}
]}.