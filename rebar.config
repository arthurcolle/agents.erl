{overrides, [
    {override, jiffy, [
        {plugins, [pc]},
        {artifacts, ["priv/jiffy.so"]},
        {provider_hooks, [
            {post, [
                {compile, {pc, compile}},
                {clean, {pc, clean}}
            ]}
        ]}
    ]},
    {override, prometheus, [{deps, []}]},
    {override, prometheus_cowboy, [{deps, []}]}
]}.

{plugins, [
    pc,
    rebar3_hex,
    rebar3_ex_doc
]}.

{hex, [{doc, ex_doc}]}.

{ex_doc, [
    {source_url, <<"https://github.com/arthurcolle/agents.erl">>},
    {extras, [<<"README.md">>]},
    {main, <<"readme">>}
]}.

{relx, [
    {release, {agents, "0.2.0"}, [
        sasl,
        agents, 
        openai, 
        agent_web, 
        openapi_scaffold,
        asn1,
        os_mon,
        runtime_tools
    ]},
    {dev_mode, true},
    {include_erts, false},
    {extended_start_script, true}
]}.

{profiles, [
    {prod, [
        {erl_opts, [
            no_debug_info,
            {hipe, [o3, verbose]},
            native,
            {inline_size, 32},
            %% Additional JIT optimizations
            {d, 'NATIVE_COMPILATION'},
            {d, 'JIT_OPTIMIZED'}
        ]},
        {relx, [
            {dev_mode, false},
            {include_erts, true},
            %% VM args for JIT optimization
            {vm_args, "config/vm.args.prod"}
        ]}
    ]},
    {perf, [
        {erl_opts, [
            debug_info,
            {hipe, [o3]},
            native,
            {d, 'PERF_ANALYSIS'}
        ]},
        {relx, [
            {dev_mode, false},
            {include_erts, true},
            {vm_args, "config/vm.args.perf"}
        ]}
    ]}
]}.

{shell, [
  {config, "config/sys.config"},
  {apps, [agents, openai, agent_web]}
]}.

{dialyzer, [
    {warnings, [
        error_handling,
        unmatched_returns,
        unknown
    ]},
    {plt_apps, top_level_deps},
    {plt_extra_apps, [ranch, cowboy, cowlib]},
    {plt_location, local},
    {base_plt_apps, [erts, kernel, stdlib, crypto, ssl, inets]}
]}.
